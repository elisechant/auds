{
	"name": "auds",
	"license": "MIT",
	"engines": {
		"node": "14.17.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/govau/design-system-components"
	},
	"devDependencies": {
		"autoprefixer": "^9.4.10",
		"cfonts": "^2.4.2",
		"chalk": "^2.4.2",
		"cypress": "^7.7.0",
		"cypress-image-snapshot": "^4.0.1",
		"express": "^4.16.4",
		"http-server": "^0.12.3",
		"inquirer": "6.2.2",
		"jest-cli": "^24.7.1",
		"lerna": "^3.14.1",
		"node-sass": "^4.14.0",
		"pa11y": "^5.1.0",
		"postcss": "^8.2.10",
		"puppeteer": "^1.13.0",
		"rimraf": "^2.6.3",
		"semver": "^5.6.0",
		"treeify": "^1.1.0"
	},
	"scripts": {
		"clean": "git clean -xdf",
		"scaffolding": "node ./scripts/helper.js scaffolding",
		"bootstrap": "lerna bootstrap --hoist",
		"build": "lerna run build",
		"publish": "lerna version --no-git-tag-version --no-push",
		"nuke": "npm run delete:node_modules | npm run delete:lib",
		"delete:node_modules": "lerna clean --yes && rimraf node_modules",
		"delete:lib": "rimraf packages/*/lib",
		"test:unit-test": "jest",
		"test": "node scripts/helper.js test && node ./scripts/a11y.js",
		"serve:test": "http-server --no-dotfiles",
		"test:integration": "cypress run --reporter cypress-image-snapshot/reporter --env failOnSnapshotDiff=false",
		"test:integration:update": "npm run test:integration --env updateSnaphots=true",
		"cypress:open": "cypress open NODE_OPTIONS=--max_old_space_size=4096"
	},
	"jest": {
		"testRegex": "\\.spec.js$",
		"collectCoverageFrom": [
			"packages/*/lib/js/*.js"
		],
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		}
	}
}
